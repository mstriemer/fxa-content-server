<div id="main-content">
  {{#isLinkExpired}}
  <header>
    <h1 id="fxa-verification-link-expired-header">{{#t}}Verification link expired{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success">{{#t}}Email resent{{/t}}</div>

    <p>
      {{#t}}The link you clicked to verify your email is expired.{{/t}}
    </p>

    {{#canResend}}
    <div class="links">
      <a id="resend" class="resend-email" href="#">{{#t}}Click here to receive a new verification link{{/t}}</a>
    </div>
    {{/canResend}}
  </section>
  {{/isLinkExpired}}

  {{#isLinkDamaged}}
  <header>
    <h1 id="fxa-verification-link-damaged-header">{{#t}}Verification link damaged{{/t}}</h1>
  </header>

  <section>
    <p>
      {{#t}}The link you clicked was missing characters, and may have been broken by your email client. Copy the address carefully, and try again.{{/t}}
    </p>
  </section>
  {{/isLinkDamaged}}

  {{#isOAuthDifferentBrowser}}
  <header>
    <h1 id="fxa-complete-sign-up-header">{{#t}}Sign up{{/t}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <p class="prefill">{{ email }}</p>

    <form novalidate>
      <div class="input-row password-row">
        <label class="label-helper"></label>
        <input type="password" class="password" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" autofocus required autocomplete="off" />

        <input id="show-password" type="checkbox" class="show-password" aria-controls="password" tabindex="-1" data-novalue />
        <label for="show-password" class="show-password-label">
          {{#t}}Show{{/t}}
        </label>
      </div>

      <div class="button-row">
        <button type="submit" class="disabled">{{#t}}Next{{/t}}</button>
      </div>
    </form>
  </section>
  {{/isOAuthDifferentBrowser}}

  {{#error}}
  <header>
    <h1 id="fxa-verification-error-header">{{#t}}Verification error{{/t}}</h1>
  </header>

  <section>
    <div class="error">{{error}}</div>
  </section>
  {{/error}}
</div>
